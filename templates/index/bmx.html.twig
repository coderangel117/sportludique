{% extends 'base.html.twig' %}
{% block body %}
    <!-- Page Content -->
    <br>
    <br>
    <br>

    <div class="featured container no-gutter">
        <div class="row posts">
            {% for produit in produits %}
                <div class="item new col-md-4">
                    <div class="featured-item">
                        <h2>
                            <a href="{{ path('produit_show', {'id': produit.id}) }}"> <img src="{{ produit.image }}"  alt="image de l'article"></a>
                        </h2>
                        <h4>{{ produit.description }}</h4>
                        <h6>{{ produit.prix }}</h6>
                        <div class="main-button">
                            <a href="{{ path('cart_add', {'id': produit.id}) }}">Panier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- fin article -->


{% endblock %}
